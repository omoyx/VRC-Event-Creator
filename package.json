{
  "name": "VRCEventCreator",
  "version": "0.9.14",
  "main": "electron/main.js",
  "scripts": {
    "start:gui": "electron .",
    "dist:gui": "electron-builder --win",
    "dist:gui:all": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Cynacedia",
  "license": "MIT",
  "description": "VRChat Event Creator",
  "dependencies": {
    "electron-updater": "^6.3.9",
    "keyv-file": "^5.3.3",
    "luxon": "^3.7.2",
    "vrchat": "^2.20.5"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.vrceventmaker.app",
    "productName": "VRChat Event Creator",
    "asar": true,
    "files": [
      "electron/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "owner": "Cynacedia",
      "repo": "VRC-Event-Creator"
    },
    "win": {
      "target": "nsis",
      "icon": "electron/app.ico",
      "artifactName": "VRChat-Event-Creator-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerLanguages": ["en_US", "de_DE", "fr_FR", "es_ES", "ja_JP", "ko_KR", "pt_BR", "ru_RU", "zh_CN"],
      "language": "0000"
    },
    "linux": {
      "target": "AppImage",
      "icon": "electron/app.png"
    }
  }
}
